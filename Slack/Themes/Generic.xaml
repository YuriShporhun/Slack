<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Slack.UI.WPF.Controls">

    
    <Style TargetType="{x:Type local:WindowHeader}">
        <Style.Resources>
            <Style x:Key="SystemButton" TargetType="local:RoundedButton">
                <Setter Property="Width" Value="12"></Setter>
                <Setter Property="Height" Value="12"></Setter>
                <Setter Property="Margin" Value="8 18 0 18"></Setter>
            </Style>
            <SolidColorBrush x:Key="CloseWindowButtonColor">#FF6157</SolidColorBrush>
            <SolidColorBrush x:Key="MinimizeWindowButtonColor">#FFC12F</SolidColorBrush>
            <SolidColorBrush x:Key="MaximizeWindowButtonColor">#2ACB42</SolidColorBrush>
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WindowHeader}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal">
                            <local:RoundedButton Background="{StaticResource CloseWindowButtonColor}" Style="{StaticResource SystemButton}" />
                            <local:RoundedButton Background="{StaticResource MinimizeWindowButtonColor}" Style="{StaticResource SystemButton}"/>
                            <local:RoundedButton Background="{StaticResource MaximizeWindowButtonColor}" Style="{StaticResource SystemButton}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:RoundedButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RoundedButton}">
                    <Button  Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="{TemplateBinding Background}"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
